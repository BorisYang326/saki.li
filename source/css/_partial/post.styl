.post {
  padding: 1.5em 2em;
  background-color: #fff;
  border: 1px #ddd;
  border-style: solid none;

  h1.title {
    margin: 0;
    display: flex;
    justify-content: center;
  }

  h2 {
    font-size: 1.2em;
  }

  h3, h4, h5, h6 {
    font-size: 1.1em;
  }

  a {
    color: gray;
    text-decoration: underline;
  }

  ul {
    padding-left: 30px;
  }

  ol {
    padding-left: 20px;
  }

  blockquote {
    border-left: 2px solid #616161;
    padding-left: 20px;
    margin: 1rem 0;
  }

  .highlight .code pre {
    background: #f7f7f7;
    padding-left: 10px;
    width: 100%;
    font-family: "Fantasque Sans Mono", monospace;
  }

  .highlight pre {
    border: 0;
    margin: 0;
    padding: 10px 0;
    padding-left: 10px;
  }

  .gutter pre {
    padding-left: 20px;
  }

  pre {
    overflow: auto;
    padding: 10px;
    font-size: 1em;
  }

  pre, .highlight {
    background: #f7f7f7;
    color: #4d4d4c;
    line-height: 1.6;
    margin: 0 auto 20px;
  }

  table {
    border-collapse: collapse;
    border-spacing: 0;
    font-size: 0.875em;
  }
}

@media screen and (max-width: 320px) {
  .post {
    padding: 30px 16px;
  }
}
.prev_next {
  padding: 1em;
  margin: 1em;
  border-style: solid none none none;
  border: 1px #ddd;
  .next {
    text-align: right;
    text-decoration: none;
    color: gray;
  }
  .prev {
    text-decoration: none;
    color: gray;
  }
  display: flex;
  justify-content: space-between;

}

.posts  { 

  .post-title {
    font-size: 1.5em;
    justify-content: center;
    display: flex;

    .post-title-link {
      color: #000;
      font-weight: bold;
      text-decoration: none;
    }
  }

  .post-content {
    margin-bottom: 1em;

    a {
      color: gray;
      text-decoration: underline;
    }

    .More {
      padding: 1em 0;
    }
  }

  .post-meta {
    color: #BABABA;
  }
}