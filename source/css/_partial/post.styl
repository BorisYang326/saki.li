.post {
  padding: 1.875em 5%;
  background-color: #fff;
  border: 1px solid #ddd;
  box-shadow: 0 0 2px #ddd;
  margin-top: 1em;

  a {
    color: gray;
    text-decoration: none;
  }

  pre {
    font-family: monospace;
    background-color: gray;
    color: #fff;
    font-size: 1em;
  }
}

.posts  { 
  .post:first-child {
    margin-top: 0;
  }

  .post-title {
    font-size: 1.5em;
    .post-title-link {
      color: #000;
      text-decoration: none;
    }
  }

  .post-content {
    a {
      color: gray;
      text-decoration: none;
    }
  }

  .post-meta {
    color: #BABABA;
  }
}