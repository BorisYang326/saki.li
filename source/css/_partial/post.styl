.post {
  padding: 1.875em 5%;
  background-color: #fff;
  border: 1px solid #ddd;
  box-shadow: 0 0 2px #ddd;
  margin-top: 1em;


  a {
    color: gray;
    text-decoration: none;
  }

  .highlight.bash {
    margin: 0;
    padding: 0;
    font-family: "Fantasque Sans Mono", monospace;
    background-color: gray;
    color: #fff;
    font-size: 1.1em;
    line-height: 1em;

    pre {
      padding: 0;
      margin: 0;
    }
  }
}

.posts  { 
  .post:first-child {
    margin-top: 0;
  }

  .post-title {
    font-size: 1.5em;
    .post-title-link {
      color: #000;
      text-decoration: none;
    }
  }

  .post-content {
    margin-bottom: 1em;
    a {
      color: gray;
      text-decoration: none;
    }
  }

  .post-meta {
    color: #BABABA;
  }
}