.post {
  padding: 1.5em 2em;
  background-color: #fff;
  border: 1px solid #ddd;
  box-shadow: 0 0 2px #ddd;
  margin-bottom: 1em;

  a {
    color: gray;
    text-decoration: none;
  }

  h2 {
    text-align: center;
  }

  .highlight.bash {
    margin: 0;
    padding: 0;
    font-family: "Fantasque Sans Mono", monospace;
    background-color: gray;
    color: #fff;
    font-size: 1.1em;
    line-height: 1em;

    pre {
      padding: 0;
      margin: 0;
    }
  }
}

.posts  { 

  .post-title {
    font-size: 1.5em;
    display: flex; 
    justify-content: center;

    .post-title-link {

      color: #000;
      font-weight: bold;
      text-decoration: none;
    }
  }

  .post-content {
    margin-bottom: 1em;
    a {
      color: gray;
      text-decoration: none;
    }
  }

  .post-meta {
    color: #BABABA;
  }
}